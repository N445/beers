{% extends 'base.html.twig' %}

{% block title %}Beer{% endblock %}

{% block body %}
    <div class="container">
        <div class="form my-5">
            {{ form_start(search) }}
            <div class="row">
                <div class="col-md-3">{{ form_widget(search.word) }}</div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-success">Rechercher</button>
                </div>
            </div>
            {{ form_end(search) }}
        </div>
        <table class="table table-striped table-hover">
            <thead class="sticky-top bg-dark text-white shadow-sm">
            <tr>
                <th>Nom</th>
                <th>Brasserie</th>
                <th>Pays</th>
            </tr>
            </thead>
            <tbody>
            {% for beer in beers %}
                <tr>
                    <td>{{ beer.name }}</td>
                    <td>{{ beer.brewer.name }}</td>
                    <td>{{ beer.brewer.country }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <ul>
        </ul>
    </div>
{% endblock %}
